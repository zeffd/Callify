<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorbgGray">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:id="@+id/header"
        android:padding="5dp"
        android:layout_marginBottom="10dp">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/vector_drawable_logo__sign"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:id="@+id/btn_NavIcon"
            android:layout_gravity="center"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/imgProfile"
            android:background="@drawable/button_background_lightpink"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/exit_wizard"
            android:layout_gravity="center"
            android:textColor="@color/colorWhite"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:inputType="text"
            android:textSize="16dp"
            android:layout_marginRight="20dp"/>


    </RelativeLayout>




            <android.support.v7.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:elevation="10dp"
             app:cardCornerRadius="5dp"
             android:background="@color/colorWhite"
             android:layout_margin="10dp"
             android:layout_below="@+id/header">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:padding="10dp"
               android:id="@+id/shareLayout">

                <ImageView
                     android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:background="@drawable/button_border_skyblue"
                     android:src="@drawable/vector_drawable_icon__right_caret"
                     android:padding="10dp"
                     android:layout_alignParentLeft="true"
                     android:layout_marginLeft="10dp"
                     android:id="@+id/Imgrefresh"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_border_skyblue"
                    android:src="@drawable/vector_drawable_shape"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/ImgShare"
                    android:layout_toRightOf="@+id/Imgrefresh"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background_skyblue"
                    android:padding="10dp"
                    android:textSize="16dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/Imgare"
                    android:text="@string/sel_plain"
                    android:textColor="@color/colorWhite"
                    android:inputType="text"
                    android:layout_toRightOf="@+id/ImgShare"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

            <View
               android:layout_width="match_parent"
               android:layout_height="0.5dp"
               android:layout_below="@+id/shareLayout"
               android:orientation="vertical"
               android:padding="20dp"
               android:background="@color/colorGray"
               android:id="@+id/viewborder">

            </View>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewborder"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_marginTop="10dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/chouse_tracking_phn_no"
                    android:textSize="16dp"
                    android:textColor="@color/colorGray"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:textAllCaps="true"
                    android:inputType=""
                    android:gravity="center"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorLiteBlack"
                    android:text="@string/other_option"
                    android:layout_gravity="center"
                    android:textSize="30dp"
                    android:padding="10dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/WISHPER_MESSAGE"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_marginTop="20dp"
                    android:gravity="start"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="16dp"
                    android:textColor="@color/colorGray"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="30dp"
                        android:paddingBottom="10dp"
                        android:id="@+id/checkboxWishper"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/checkboxWishper">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:gravity="start|center"
                            android:background="@drawable/button_background_gray"
                            android:id="@+id/btnFackbookReferal"
                            android:text="@string/example_referrall"
                            android:textSize="16dp"
                            android:textColor="@color/colorGray"
                            android:inputType="text"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingTop="10dp"
                            android:textSize="16dp"
                            android:textColor="@color/colorGray"
                            android:text="@string/whai_is_wishper_message"
                            android:background="@drawable/button_dot_border_gray" />
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/record_calls"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_marginTop="16dp"
                    android:gravity="start"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="16dp"
                    android:textColor="@color/colorGray"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="30dp">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:padding="5dp"
                        android:id="@+id/checkboxr"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/checkboxr">


                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="50dp"
                            android:textSize="16dp"
                            android:textColor="@color/colorGray"
                            android:background="@drawable/button_border_gray"
                            android:id="@+id/btnFackbReferal"
                            android:hint="@string/this_call_will_be_recorded"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingTop="10dp"
                            android:textSize="16dp"
                            android:textColor="@color/colorGray"
                            android:text="@string/important_note"
                            android:background="@drawable/button_dot_border_gray" />

                    </LinearLayout>
                </RelativeLayout>



            </LinearLayout>

            </LinearLayout>
          </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>